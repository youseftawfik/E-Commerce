@model Admin.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_LoginLayout.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/img/profile.png" alt="logo">
                        </div>
                        <h3 class="font-weight-light">Login</h3>
                        <br>
                        <form method="post">
                            <div asp-validation-summary="All" class="alert-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email">E-mail:</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter Your E-mail"/>
                                <br />
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Password:</label>
                                <input asp-for="Password" class="form-control" placeholder="Enter Your Password"/>
                                <br />
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                                    <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                                </div>
                            </div>
                            <div class="form-group">
                                    <a id="forgot-password">Forgot your password?</a> 

                                    <a asp-action="Register" style="float:right">Create New Account</a>
                            </div>
                            <br />
                            <div>
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">LOGIN</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>     
    </div>
</div>