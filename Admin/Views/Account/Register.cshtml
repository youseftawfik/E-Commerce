@model Admin.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Registeration";
    Layout = "~/Views/_LoginLayout.cshtml";
}


    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/img/profile.png" alt="logo">
                            </div>
                            <h3 class="font-weight-light">Sign Up</h3>
                            <br>
                            <form method="post">
                                <div asp-validation-summary="All" class="alert-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Email">E-mail:</label>
                                    <input asp-for="Email" class="form-control" />
                                    <br />
                                    <span asp-validation-for="Email" class="alert-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Password">Password:</label>
                                    <input asp-for="Password" class="form-control" />
                                    <br />
                                    <span asp-validation-for="Password" class="alert-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ConfirmPassword">Confirm Password:</label>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <br />
                                    <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Register</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



